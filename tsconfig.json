{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "alwaysStrict": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "paths": {
      "ngx-metaman": ["dist/meta-man/meta-man", "dist/meta-man"]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  }
}
